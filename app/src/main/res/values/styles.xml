<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
		<item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
		<item name="android:windowIsTranslucent">false</item>
		<item name="android:windowDisablePreview">true</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:spinnerItemStyle">@style/DropDownItemStyle</item>
		<item name="android:colorAccent">@color/highlight_normal_light</item>
		<item name="android:colorControlActivated">@color/highlight_normal_light</item>
	</style>
	<style name="DropDownItemStyle" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
	</style>
	<style name="ActivityAnimation" parent="@android:style/Animation">
		<item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
		<item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
		<item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
		<item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
	</style>
	<style name="ActivityAnimation10" parent="@android:style/Animation">
		<item name="android:activityOpenEnterAnimation">@anim/activity_open_enter10</item>
		<item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
		<item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
		<item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
	</style>

	<style name="Invisible" parent="@android:style/Theme.Translucent">
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowCloseOnTouchOutside">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">true</item>
	</style>

	<style name="MIUIPrefs">
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">false</item>
		<item name="android:windowActionBarOverlay">false</item>
	</style>

	<style name="ApplyInvisible">
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowCloseOnTouchOutside">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:windowIsTranslucent">true</item>
	</style>

	<style name="TextAppearance">
		<item name="android:textSize">@dimen/secondary_text_size</item>
		<item name="android:textColorHighlight">?android:attr/textColorHighlight</item>
		<item name="android:textColorHint">?android:attr/textColorHint</item>
		<item name="android:textColorLink">?android:attr/textColorLink</item>
	</style>
	<style name="TextAppearance.Primary">
		<item name="android:textSize">@dimen/normal_text_size</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/preference_primary_text</item>
	</style>
	<style name="TextAppearance.Secondary">
		<item name="android:textSize">@dimen/secondary_text_size</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/preference_secondary_text</item>
	</style>

	<style name="MiuiPreferenceCategory">
		<item name="android:textSize">@dimen/preference_category_text_size</item>
		<item name="android:textColor">@color/preference_category_text_color</item>
	</style>

	<style name="TextAppearance.Widget" />
	<style name="TextAppearance.Widget.EditText">
		<item name="android:textSize">@dimen/secondary_text_size</item>
		<item name="android:textColor">?android:attr/editTextColor</item>
		<item name="android:textColorHint">@color/hint_edit_text_color</item>
	</style>

	<style name="Widget" />
	<style name="Widget.PreferenceItem">
		<item name="android:paddingTop">@dimen/preference_item_padding_top</item>
		<item name="android:paddingBottom">@dimen/preference_item_padding_bottom</item>
	</style>
	<style name="Widget.EditPreference">
		<item name="android:layout_marginLeft">0dp</item>
		<item name="android:layout_marginRight">0dp</item>
	</style>
	<style name="Widget.EditPreference.Padded">
		<item name="android:layout_marginTop">@dimen/preference_screen_padding_top</item>
		<item name="android:layout_marginBottom">@dimen/preference_screen_padding_bottom</item>
		<item name="android:layout_marginStart">?android:attr/listPreferredItemPaddingLeft</item>
		<item name="android:layout_marginEnd">?android:attr/listPreferredItemPaddingRight</item>
	</style>
	<style name="Widget.InputField">
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:layout_marginTop">16dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/preference_text_size</item>
	</style>
	<style name="Widget.InputField.Category">
		<item name="android:paddingBottom">9dp</item>
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textSize">@dimen/preference_category_text_size</item>
		<item name="android:textColor">@color/preference_category_text_color</item>
	</style>
	<style name="Widget.InputField.Category.First">
		<item name="android:layout_marginTop">0dp</item>
	</style>
	<style name="Widget.InputField.Category.Middle">
		<item name="android:layout_marginTop">16dp</item>
	</style>
	<style name="Widget.ProgressBar">
		<item name="android:background">@android:color/transparent</item>
		<item name="android:maxWidth">@dimen/progressbar_size</item>
		<item name="android:maxHeight">@dimen/progressbar_size</item>
		<item name="android:indeterminateDrawable">@drawable/progressbar_indeterminate</item>
		<item name="android:minWidth">@dimen/progressbar_size</item>
		<item name="android:minHeight">@dimen/progressbar_size</item>
<!--
		<item name="indeterminateFramesCount">48</item>
		<item name="indeterminateFramesDuration">25</item>
-->
	</style>

</resources>
