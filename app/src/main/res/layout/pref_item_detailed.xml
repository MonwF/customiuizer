<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:minHeight="?attr/listPreferredItemHeightLarge"
	android:paddingStart="?attr/listPreferredItemPaddingLeft"
	android:paddingEnd="?attr/listPreferredItemPaddingRight"
	android:paddingTop="8.66dp"
	android:paddingBottom="8.66dp"
	tools:ignore="RtlSymmetry">

	<LinearLayout
		android:layout_weight="1"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:orientation="vertical">

		<TextView
			android:id="@android:id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:textColor="@color/preference_primary_text_color"
			android:textSize="16sp" />

		<TextView
			android:id="@android:id/summary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="false"
			android:textColor="@color/preference_secondary_text_color"
			android:textSize="13sp" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginStart="10dp"
		android:orientation="vertical">

		<TextView
			android:id="@android:id/text1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:textColor="@color/preference_secondary_text_color"
			android:textSize="11sp"
			android:layout_gravity="end"
			tools:ignore="SmallSp" />

		<TextView
			android:id="@android:id/text2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:textColor="@color/preference_secondary_text_color"
			android:textSize="11sp"
			android:layout_gravity="end"
			tools:ignore="SmallSp" />

	</LinearLayout>

</LinearLayout>
