<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="20dp"
	android:gravity="center"
	android:orientation="vertical"
	android:clipChildren="false"
	android:clipToPadding="false">

	<RelativeLayout
		android:layout_height="80dp"
		android:layout_width="80dp"
		android:backgroundTint="@color/ic_launcher_background"
		android:background="@drawable/ic_mask"
		android:clipChildren="false"
		android:clipToPadding="false">

		<RelativeLayout
			android:layout_height="80dp"
			android:layout_width="80dp"
			android:backgroundTint="@color/ic_launcher_background"
			android:background="@drawable/ic_mask"
			android:clipChildren="false"
			android:clipToPadding="false">

			<ImageView
				android:id="@+id/santa_hat"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:contentDescription="@null"
				android:scaleX="1.0"
				android:scaleY="1.0"
				android:visibility="gone"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"
				android:layout_marginTop="-32dp"
				android:layout_marginRight="-23dp"
				android:translationZ="10dp"
				app:srcCompat="@drawable/santa_hat" />

			<ImageView
				android:id="@+id/miuizer_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:contentDescription="@null"
				android:gravity="center"
				android:layout_gravity="center"
				android:scaleX="1.5"
				android:scaleY="1.5"
				app:srcCompat="@mipmap/ic_launcher_foreground" />

		</RelativeLayout>

	</RelativeLayout>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="9dp"
		android:gravity="center"
		android:text="@string/app_name"
		android:textSize="19.3sp"
		android:textColor="@color/preference_primary_text_color" />

	<TextView
		android:id="@+id/about_dev"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="3dp"
		android:gravity="center"
		android:maxLines="1"
		android:text="@string/about_dev"
		android:textColor="@color/color_not_selected"
		android:textSize="12sp" />

	<TextView
		android:id="@+id/about_version"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="3dp"
		android:layout_marginBottom="20dp"
		android:gravity="center"
		android:maxLines="1"
		android:text="@string/about_version"
		android:textColor="@color/color_not_selected"
		android:textSize="12sp" />

	<View
		android:layout_width="match_parent"
		android:layout_height="0.3dp"
		android:layout_marginTop="6.7dp"
		android:background="@color/about_divider" />
</LinearLayout>
